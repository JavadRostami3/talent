# ==============================================
# Django Settings
# ==============================================
DEBUG=True
SECRET_KEY=your-secret-key-here-CHANGE-THIS-IN-PRODUCTION
ALLOWED_HOSTS=localhost,127.0.0.1

# ==============================================
# Database Configuration
# ==============================================
# For Development (SQLite)
# No configuration needed - uses default db.sqlite3

# For Production (PostgreSQL) - uncomment and configure:
# DB_NAME=talent_db
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_HOST=localhost
# DB_PORT=5432

# ==============================================
# JWT Authentication
# ==============================================
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# ==============================================
# Media Files
# ==============================================
MEDIA_ROOT=media
MEDIA_URL=/media/

# ==============================================
# CORS Configuration
# ==============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# ==============================================
# Security Settings (Production Only)
# ==============================================
# این تنظیمات فقط زمانی که DEBUG=False است اعمال می‌شوند

# SSL/HTTPS Settings
SECURE_SSL_REDIRECT=True

# HSTS (HTTP Strict Transport Security)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

